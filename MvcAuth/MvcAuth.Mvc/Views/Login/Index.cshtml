@using MvcAuth.Mvc.ViewModels.Auth;
@model LoginViewModel;
@{
    var erro = TempData["Erro"] ?? "";
}

@if (!string.IsNullOrEmpty(erro.ToString()))
{
    <div class="alert alert-danger" role="alert">
        @erro
    </div>
}

<div class="row">

    <div class="panel panel-success">

        <div class="panel panel-heading">
            <h3>Login</h3>
        </div>

        <div class="panel panel-body">
            <form asp-controller="Login" asp-action="LoginPost" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" placeholder="Digite o nome..." class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" type="password" placeholder="Digite a senha..." class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <div class="form-group mt-4 col-12">
                    <input type="submit" value="login" class="btn btn-info mx-auto" />
                </div>
            </form>
        </div>
    </div>

</div>